{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "files": [
        "src/lib/tags-input.module.ts",
        "src/lib/tags-input.component.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "angularCompilerOptions": {
        "genDir": "compiled",
        "skipTemplateCodegen": true,
        "skipMetadataEmit": false,
        "strictMetadataEmit": true,
        "annotationsAs": "decorators"
    }
}